@model NewWebApp.Models.CatalogueViewModel

@{
    ViewBag.Title = "AddSubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddCategory</h2>


@using (Html.BeginForm("CreateSubCategory", "Home", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>CatalogueViewModel</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <select id="categoryDropDown" onchange="getSubCategoryList()">
                    <option>---Select Category---</option>
                    @foreach (var category in Model.categories)
                    {
                        <text>
                            <option value="@category.Id">@category.Name</option>
                        </text>
                    }
                </select>
            </div>
            <div class="col-md-offset-2 col-md-10">
                @Html.TextBoxFor(m => m.subCategory.Name)
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
